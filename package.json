{
  "name": "graphql-starter",
  "version": "1.0.0",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": ["yarn lint"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && lint-staged"
    }
  },
  "scripts": {
    "build": "tsc",
    "debug": "NODE_ENV=development nodemon --inspect dist/index.js",
    "dev": "NODE_ENV=development nodemon src/index.ts --watch src",
    "generate": "graphql-codegen --config codegen.json",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --forceExit",
    "type-check": "tsc --noEmit",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "apollo-server-express": "^2.14.4",
    "apollo-server-testing": "^2.14.4",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "graphql": "^15.1.0",
    "graphql-depth-limit": "^1.1.0",
    "helmet": "^3.23.0",
    "mongodb": "^3.5.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.15.3",
    "@graphql-codegen/typescript": "1.15.3",
    "@graphql-codegen/typescript-operations": "1.15.3",
    "@graphql-codegen/typescript-resolvers": "1.15.3",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/helmet": "0.0.47",
    "@types/jest": "^26.0.0",
    "@types/mongodb": "^3.5.20",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
